<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>GoldenCodes</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    
<div class="row justify-content-center">
  @each(user in usersList)
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card p-4">
                <div class="card-body">
                    <i class="fas fa-user-circle fa-3x mb-3"></i>
                    <h5 class="card-title"><b>Nombre:</b> {{ user.nombre }}</h5>
                    <p class="card-text mb-1">
                        <i class="fas fa-envelope me-2"></i> <b>Email:</b> {{ user.email }}
                    </p>
                    <p class="card-text mb-1">
                        <i class="fas fa-tag me-2"></i> <b>Categor√≠a:</b> {{ user.categoria }}
                    </p>
                    <p class="card-text mb-1">
                        <i class="fas fa-id-badge me-2"></i> <b>ID:</b> {{ user.id }}
                    </p>
                    <p class="card-text">
                        <i class="fas fa-calendar-alt me-2"></i> <b>Registro:</b> {{ user.createdAt.toISODate() }}
                    </p>
                    <a href="/users/{{ user.id }}" class="btn btn-sm btn-outline-warning mt-3">Ver Perfil</a>
                </div>
            </div>
        </div>
    @endeach

</div>
</body>
</html>